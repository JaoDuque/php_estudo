<?php

$idade = 17;
$numerodepessoas = 1;

echo "Você so pode entrar se tiver 18 anos, ou com 16 anos e acompanhado.". PHP_EOL;

if ($idade >= 18){
    echo "Você tem $idade anos." . PHP_EOL;
    echo  "Pode entrar!";
}elseif ($idade >=16 && $numerodepessoas >1) {
    echo "Pode entrar! Você tem $idade, e esta acompanhado.\n";
}else{
    echo "Você tem $idade,  não pode entrar.\n";
}